---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import { Mail, Phone } from "@lucide/astro";

interface TeamInterface {
    name: string;
    position: string;
    img: ImageMetadata;
    items?: string[];
    master?: string[];
}

interface TeamProcuradoresInterface {
    name: string;
    position: string;
    img: ImageMetadata;
    email?: string;
    phone?: string;
}

import imgJohn from "../assets/images/teams/john.webp";
import imgIsa from "../assets/images/teams/isabel-03.png";
import imgFer from "../assets/images/teams/fernando.webp";

import imgIngrid from "../assets/images/teams/ingrid.webp";
import imgFlavio from "../assets/images/teams/flavio.webp";

const teamAbogados: TeamInterface[] = [
    {
        name: "John Ortega",
        position: "Abogado",
        img: imgJohn,
        items: ["Derecho Penal", "Derecho Administrativo", "Justicia Militar"],
        master: [
            "Diplomado en Derecho Penal y Derecho Procesal Penal.",
            "Diplomado en Derecho Inmobiliario.",
            "Curso Ley 20.000, que sanciona el trafico ilicito de estupefacientes y sustancias psicotropicas.",
        ],
    },
    {
        name: "Isabel Uribe",
        position: "Abogado",
        img: imgIsa,
        items: ["Derecho Penal", "Derecho Civil", "Derecho de Familia"],
        master: [
            "Diplomado en Derecho Laboral.",
            "Diplomado en Derecho Penal y Procesal.",
            "Curso accidentes laborales leales y enfermedades profesionales.",
        ],
    },
    {
        name: "Fernando Gutierrez",
        position: "Abogado",
        img: imgFer,
        items: ["Derecho Laboral", "Derecho de Familia", "Deudas"],
        master: [
            "Diplomado en derecho laboral y empresa.",
            "Diplomado en compliance público y municipal.",
            "Postítulo en recursos procesales.",
            "Diploma en derecho ambiental.",
        ],
    },
];

const teamProcuradores: TeamProcuradoresInterface[] = [
    {
        name: "Ingrid Alvarado",
        position: "Procurador",
        img: imgIngrid,
        email: "Juridicasurdefensa@gmail.com",
        phone: "+56958835620",
    },
    {
        name: "Flavio Vargas",
        position: "Procurador",
        img: imgFlavio,
        email: "Juridicasurdefensa@gmail.com",
        phone: "+56921614436",
    },
];
---

<div class="container mx-auto">
    <div class="flex flex-col justify-center items-center">
        <h1 class="tituloH1" data-aos="fade-down" data-aos-duration="800">Nuestro Equipo</h1>
        <p
            class="textAlternative py-[15px] text-center md:w-[70%]"
            data-aos="fade-up"
            data-aos-duration="900"
        >
            Contamos con abogados especializados en distintas áreas del derecho, comprometidos con
            la defensa de tus derechos y la búsqueda de soluciones efectivas para cada caso.
        </p>
    </div>
    <div class="flex flex-row gap-8 mt-[35px] items-center justify-center">
        {
            teamAbogados.map((item, index) => (
                <div
                    class="flex flex-col items-center justify-center group"
                    data-aos="zoom-in"
                    data-aos-duration="800"
                    data-aos-delay={index * 150}
                >
                    <div class="relative cursor-pointer w-[350px] h-[366px] overflow-hidden rounded-t-lg shadow-lg">
                        <Image
                            src={item.img}
                            alt={item.name}
                            class="w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-500"
                            widths={[309, 400]}
                            sizes="309px"
                            loading="lazy"
                        />
                        {/* Overlay mejorado */}
                        <div class="absolute inset-0 bg-marron/75 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col items-center justify-start py-6 px-6 overflow-y-auto">
                            {/* Nombre */}
                            <h5 class="font-sans text-[22px] font-bold text-white text-center mb-4">
                                {item.name}
                            </h5>

                            {/* Áreas de Especialización */}
                            {item.items && item.items.length > 0 && (
                                <div class="w-full mb-4">
                                    <h6 class="font-sans text-[14px] font-bold text-white uppercase tracking-wider text-center mb-2 border-b border-white/30 pb-1">
                                        Especialidades
                                    </h6>
                                    <ul class="space-y-1.5">
                                        {item.items.map((servicio) => (
                                            <li class="text-white text-[15px] text-center font-sans leading-tight">
                                                • {servicio}
                                            </li>
                                        ))}
                                    </ul>
                                </div>
                            )}

                            {/* Estudios de Posgrado */}
                            {item.master && item.master.length > 0 && (
                                <div class="w-full">
                                    <h6 class="font-sans text-[14px] font-bold text-white uppercase tracking-wider text-center mb-2 border-b border-white/30 pb-1">
                                        Estudios de Posgrado
                                    </h6>
                                    <ul class="space-y-1.5">
                                        {item.master.map((master) => (
                                            <li class="text-white text-[14px] text-center font-sans leading-tight">
                                                • {master}
                                            </li>
                                        ))}
                                    </ul>
                                </div>
                            )}
                        </div>
                    </div>
                    {/* Info card integrada */}
                    <div class="w-[350px] bg-gradient-to-b from-gris-bg to-white border border-gris-border rounded-b-lg px-6 py-6 shadow-md group-hover:shadow-xl transition-shadow duration-300">
                        <h5 class="font-sans text-[22px] font-bold text-secondary text-center leading-tight">
                            {item.name}
                        </h5>
                        <div class="flex items-center justify-center gap-2 mt-3">
                            <div class="h-[1px] w-[30px] bg-marron" />
                            <p class="text-marron uppercase font-sans text-[12px] tracking-[0.2em] font-bold">
                                {item.position}
                            </p>
                            <div class="h-[1px] w-[30px] bg-marron" />
                        </div>
                    </div>
                </div>
            ))
        }
    </div>

    <div class="flex flex-row gap-8 mt-[35px] items-center justify-center">
        {
            teamProcuradores.map((item, index) => (
                <div
                    class="flex flex-col items-center justify-center group"
                    data-aos="zoom-in"
                    data-aos-duration="800"
                    data-aos-delay={index * 150}
                >
                    <div class="relative cursor-pointer w-[350px] h-[366px] overflow-hidden rounded-t-lg shadow-lg">
                        <Image
                            src={item.img}
                            alt={item.name}
                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                            widths={[309, 400]}
                            sizes="309px"
                            loading="lazy"
                        />
                        {/* Overlay mejorado */}
                        <div class="absolute inset-0 bg-marron/75 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col items-center justify-center py-8 px-6 gap-y-8">
                            {/* Nombre */}
                            <h5 class="font-sans text-[24px] font-bold text-white text-center">
                                {item.name}
                            </h5>

                            {/* Iconos de contacto */}
                            <div class="flex gap-4 items-center justify-center">
                                <a
                                    href={`mailto:${item.email}`}
                                    class="w-10 h-10 bg-white rounded-full flex items-center justify-center hover:scale-110 transition-transform duration-200"
                                    aria-label="Enviar email"
                                >
                                    <Mail class="text-marron" size={18} />
                                </a>
                                <a
                                    href={`tel:${item.phone}`}
                                    class="w-10 h-10 bg-white rounded-full flex items-center justify-center hover:scale-110 transition-transform duration-200"
                                    aria-label="Llamar por teléfono"
                                >
                                    <Phone class="text-marron" size={18} />
                                </a>
                            </div>
                        </div>
                    </div>
                    {/* Info card integrada */}
                    <div class="w-[350px] bg-gradient-to-b from-gris-bg to-white border border-gris-border rounded-b-lg px-6 py-6 shadow-md group-hover:shadow-xl transition-shadow duration-300">
                        <h5 class="font-sans text-[22px] font-bold text-secondary text-center leading-tight">
                            {item.name}
                        </h5>
                        <div class="flex items-center justify-center gap-2 mt-3">
                            <div class="h-[1px] w-[30px] bg-marron" />
                            <p class="text-marron uppercase font-sans text-[12px] tracking-[0.2em] font-bold">
                                {item.position}
                            </p>
                            <div class="h-[1px] w-[30px] bg-marron" />
                        </div>
                    </div>
                </div>
            ))
        }
    </div>
</div>
