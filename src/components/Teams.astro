---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import { Mail, Phone } from "@lucide/astro";

interface TeamInterface {
    name: string;
    position: string;
    img: ImageMetadata;
    items?: string[];
    master?: string[];
}

interface TeamProcuradoresInterface {
    name: string;
    position: string;
    img: ImageMetadata;
    email?: string;
    phone?: string;
}

import imgJohn from "../assets/images/teams/john.webp";
import imgIsa from "../assets/images/teams/isabel-03.webp";
import imgFer from "../assets/images/teams/fernando.webp";

import imgIngrid from "../assets/images/teams/ingrid.webp";
import imgFlavio from "../assets/images/teams/flavio.webp";

const teamAbogados: TeamInterface[] = [
    {
        name: "John Ortega",
        position: "Abogado",
        img: imgJohn,
        items: ["Derecho Penal", "Derecho Administrativo", "Justicia Militar"],
        master: [
            "Diplomado en Derecho Penal y Derecho Procesal Penal.",
            "Diplomado en Derecho Inmobiliario.",
            "Curso Ley 20.000, que sanciona el trafico ilicito de estupefacientes y sustancias psicotropicas.",
        ],
    },
    {
        name: "Isabel Uribe",
        position: "Abogada",
        img: imgIsa,
        items: ["Derecho Penal", "Derecho Civil", "Derecho de Familia"],
        master: [
            "Diplomado en Derecho Laboral.",
            "Diplomado en Derecho Penal y Procesal Penal.",
            "Curso accidentes laborales y enfermedades profesionales.",
        ],
    },
    {
        name: "Fernando Gutiérrez",
        position: "Abogado",
        img: imgFer,
        items: ["Derecho Laboral", "Derecho de Familia", "Deudas"],
        master: [
            "Diplomado en derecho laboral y empresa.",
            "Diplomado en compliance público y municipal.",
            "Postítulo en recursos procesales.",
            "Diplomado en derecho ambiental.",
        ],
    },
];

const teamProcuradores: TeamInterface[] = [
    {
        name: "Ingrid Alvarado",
        position: "Procuradora",
        img: imgIngrid,
        items: ["Tramitación posesiones efectivas", "Saneamiento de la pequeña propiedad raíz"],
    },
    {
        name: "Flavio Vargas",
        position: "Procurador",
        img: imgFlavio,
        items: ["Tramitación ante Juzgado de Policía Local"],
    },
];
---

<div class="container mx-auto px-6 sm:px-8 md:px-10 lg:px-12 xl:px-0">
    <div class="flex flex-col justify-center items-center">
        <h2 class="tituloH1" data-aos="fade-down" data-aos-duration="800">Nuestro Equipo</h2>
        <p
            class="textAlternative py-3 sm:py-4 xl:py-[15px] text-center w-full sm:w-[85%] md:w-[75%] xl:w-[70%]"
            data-aos="fade-up"
            data-aos-duration="900"
        >
            Contamos con abogados especializados en distintas áreas del derecho, comprometidos con
            la defensa de tus derechos y la búsqueda de soluciones efectivas para cada caso.
        </p>
    </div>
    <div
        class="flex flex-col sm:flex-col md:flex-row xl:flex-row gap-4 sm:gap-5 md:gap-6 xl:gap-8 mt-6 sm:mt-7 md:mt-8 xl:mt-[35px] items-center justify-center"
    >
        {
            teamAbogados.map((item, index) => (
                <div
                    class="flex flex-col items-center justify-center group w-full sm:w-[90%] md:w-auto"
                    data-aos="zoom-in"
                    data-aos-duration="800"
                    data-aos-delay={index * 150}
                >
                    <div class="relative cursor-pointer w-full md:w-[280px] lg:w-[320px] xl:w-[350px] h-[380px] sm:h-[400px] md:h-[380px] lg:h-[400px] xl:h-[366px] overflow-hidden rounded-t-lg shadow-lg">
                        <Image
                            src={item.img}
                            alt={item.name}
                            class="w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-500"
                            widths={[309, 400]}
                            sizes="309px"
                            loading="lazy"
                        />
                        {/* Overlay mejorado */}
                        <div class="absolute inset-0 bg-marron/75 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col items-center justify-start py-4 sm:py-5 xl:py-6 px-4 sm:px-5 xl:px-6 overflow-y-auto">
                            {/* Nombre */}
                            <h5 class="font-sans text-[18px] sm:text-[20px] xl:text-[22px] font-bold text-white text-center mb-3 xl:mb-4">
                                {item.name}
                            </h5>

                            {/* Áreas de Especialización */}
                            {item.items && item.items.length > 0 && (
                                <div class="w-full mb-3 xl:mb-4">
                                    <h6 class="font-sans text-[12px] sm:text-[13px] xl:text-[14px] font-bold text-white uppercase tracking-wider text-center mb-2 border-b border-white/30 pb-1">
                                        Especialidades
                                    </h6>
                                    <ul class="space-y-1 xl:space-y-1.5">
                                        {item.items.map((servicio) => (
                                            <li class="text-white text-[13px] sm:text-[14px] xl:text-[15px] text-center font-sans leading-tight">
                                                • {servicio}
                                            </li>
                                        ))}
                                    </ul>
                                </div>
                            )}

                            {/* Estudios de Posgrado */}
                            {item.master && item.master.length > 0 && (
                                <div class="w-full">
                                    <h6 class="font-sans text-[12px] sm:text-[13px] xl:text-[14px] font-bold text-white uppercase tracking-wider text-center mb-2 border-b border-white/30 pb-1">
                                        Estudios de Posgrado
                                    </h6>
                                    <ul class="space-y-1 xl:space-y-1.5">
                                        {item.master.map((master) => (
                                            <li class="text-white text-[12px] sm:text-[13px] xl:text-[14px] text-center font-sans leading-tight">
                                                • {master}
                                            </li>
                                        ))}
                                    </ul>
                                </div>
                            )}
                        </div>
                    </div>
                    {/* Info card integrada */}
                    <div class="w-full md:w-[280px] lg:w-[320px] xl:w-[350px] bg-gradient-to-b from-gris-bg to-white border border-gris-border rounded-b-lg px-4 sm:px-5 xl:px-6 py-5 xl:py-6 shadow-md group-hover:shadow-xl transition-shadow duration-300">
                        <h5 class="font-sans text-[19px] sm:text-[20px] xl:text-[22px] font-bold text-secondary text-center leading-tight">
                            {item.name}
                        </h5>
                        <div class="flex items-center justify-center gap-2 mt-3">
                            <div class="h-[1px] w-[25px] sm:w-[28px] xl:w-[30px] bg-marron" />
                            <p class="text-marron uppercase font-sans text-[11px] xl:text-[12px] tracking-[0.15em] xl:tracking-[0.2em] font-bold">
                                {item.position}
                            </p>
                            <div class="h-[1px] w-[25px] sm:w-[28px] xl:w-[30px] bg-marron" />
                        </div>
                    </div>
                </div>
            ))
        }
    </div>

    <div
        class="flex flex-col sm:flex-col md:flex-row xl:flex-row gap-4 sm:gap-5 md:gap-6 xl:gap-8 mt-6 sm:mt-7 md:mt-8 xl:mt-[35px] items-center justify-center"
    >
        {
            teamProcuradores.map((item, index) => (
                <div
                    class="flex flex-col items-center justify-center group w-full sm:w-[90%] md:w-auto"
                    data-aos="zoom-in"
                    data-aos-duration="800"
                    data-aos-delay={index * 150}
                >
                    <div class="relative cursor-pointer w-full md:w-[280px] lg:w-[320px] xl:w-[350px] h-[380px] sm:h-[400px] md:h-[380px] lg:h-[400px] xl:h-[366px] overflow-hidden rounded-t-lg shadow-lg">
                        <Image
