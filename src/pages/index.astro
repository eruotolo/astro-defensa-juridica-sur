---
import { SliderHome } from "../components/SliderHome";
import Layout from "../layouts/Layout.astro";
import About from "../components/About.astro";
import Service from "../components/Service.astro";
import Teams from "../components/Teams.astro";
import Expertise from "../components/Expertise.astro";
import Location from "../components/Location.astro";
import ContactForm from "../components/ContactForm.astro";
---

<Layout>
    <div class="mt-[-135px]" id="inicio">
        <SliderHome client:idle />
    </div>

    <!-- NOSTROS -->
    <section id="nosotros" class="py-[90px]">
        <About />
    </section>

    <!-- SERVICIOS -->
    <section id="servicios" class="bg-gris-bg py-[90px]">
        <Service />
    </section>

    <!-- TESTIMONIALS -->
    <!--<section id="testimonios" class="bg-testimonios py-[50px]">
        <Testimonials />
    </section>-->

    <!-- EQUIPO -->
    <section id="equipo" class="bg-white py-[90px]">
        <Teams />
    </section>

    <!-- Expertise -->
    <section id="expertise" class="bg-gris-bg">
        <Expertise />
    </section>

    <!-- LOCATION -->
    <section id="contacto" class="bg-white py-[90px]">
        <Location />
    </section>

    <!-- CONTACTO -->
    <section class="bg-gris-bg py-[90px]">
        <ContactForm />
    </section>
</Layout>
