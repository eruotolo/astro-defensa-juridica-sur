---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="es" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- Preconnect for performance -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

        <!-- Favicon - Múltiples formatos para compatibilidad -->
        <link rel="icon" href="/favicon.ico" sizes="32x32" />
        <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
        <link rel="apple-touch-icon" href="/favicon.png" />
        <meta name="generator" content={Astro.generator} />

        <!-- SEO Meta Tags -->
        <title>Defensa Jurídica Sur | Abogados Puerto Montt | Asesoría Legal Especializada</title>
        <meta
            name="description"
            content="Bufete de abogados especializado en defensa legal y derecho corporativo en Puerto Montt. Más de 20 años de experiencia. Consulta gratuita. Contacta hoy."
        />
        <meta
            name="keywords"
            content="abogados puerto montt, defensa juridica sur, derecho corporativo, asesoria legal, bufete abogados chile, abogados sur chile, defensa legal puerto montt"
        />
        <meta name="author" content="Crow Advance" />
        <meta name="robots" content="index, follow" />
        <meta name="language" content="Spanish" />
        <meta name="revisit-after" content="7 days" />

        <!-- Geo Meta Tags -->
        <meta name="geo.region" content="CL-LL" />
        <meta name="geo.placename" content="Puerto Montt" />
        <meta name="geo.position" content="-41.4693;-72.9424" />
        <meta name="ICBM" content="-41.4693, -72.9424" />

        <!-- Canonical URL -->
        <link rel="canonical" href="https://defensajuridicasur.cl/" />

        <!-- Hreflang -->
        <link rel="alternate" hreflang="es-cl" href="https://defensajuridicasur.cl/" />
        <link rel="alternate" hreflang="es" href="https://defensajuridicasur.cl/" />

        <!-- Open Graph Meta Tags -->
        <meta
            property="og:title"
            content="Defensa Jurídica Sur | Abogados Puerto Montt | Asesoría Legal Especializada"
        />
        <meta
            property="og:description"
            content="Bufete de abogados especializado en defensa legal y derecho corporativo en Puerto Montt. Más de 20 años de experiencia. Consulta gratuita."
        />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://defensajuridicasur.cl/" />
        <meta property="og:site_name" content="Defensa Jurídica Sur" />
        <meta property="og:image" content="https://defensajuridicasur.cl/assets/og-image.jpg" />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
        <meta
            property="og:image:alt"
            content="Defensa Jurídica Sur - Abogados especialistas en Puerto Montt"
        />
        <meta property="og:locale" content="es_CL" />

        <!-- Facebook App ID (optional) -->
        <meta property="fb:app_id" content="your-facebook-app-id" />

        <!-- Twitter Card Meta Tags -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta
            name="twitter:title"
            content="Defensa Jurídica Sur | Abogados Puerto Montt | Asesoría Legal Especializada"
        />
        <meta
            name="twitter:description"
            content="Bufete de abogados especializado en defensa legal y derecho corporativo en Puerto Montt. Más de 20 años de experiencia. Consulta gratuita."
        />
        <meta
            name="twitter:image"
            content="https://defensajuridicasur.cl/assets/twitter-card.jpg"
        />
        <meta
            name="twitter:image:alt"
            content="Defensa Jurídica Sur - Abogados especialistas en Puerto Montt"
        />
        <meta name="twitter:site" content="@defensajuridicasur" />
        <meta name="twitter:creator" content="@defensajuridicasur" />

        <!-- Theme Color for PWA -->
        <meta name="theme-color" content="#c18f59" />
        <meta name="msapplication-TileColor" content="#c18f59" />

        <!-- Additional Performance -->
        <meta name="format-detection" content="telephone=no" />
        <meta http-equiv="x-ua-compatible" content="ie=edge" />
    </head>
    <body>
        <Header />
        <slot />
        <Footer />
    </body>
</html>
